<section class='new-post'>
  <div class='new-post-wrapper'>

    <div class='new-post-content'>
      <h4 class='new-post-section-title'>Выбранные каналы</h4>

      <div class='main-search-section'>
        <div class='search-container'>
          <div class='search-input-wrapper'>
            <div class='search-input-container'>
              <div class='search-tags'></div>
              <input
                type='text'
                class='search-input'
                placeholder='Выберите каналы'
                data-search-input
              />
              <img src='/icons/chevron.svg' class='search-arrow-icon' data-search-arrow />
            </div>
            <div class='search-dropdown' data-search-dropdown></div>
          </div>
        </div>
      </div>

      <h4 class='new-post-section-title-post'>Текст поста</h4>

      <div class='new-post-editor'>
        <div class='editor-container' data-editor-container>
          <textarea
            class='editor-textarea'
            placeholder='Введите текст'
            maxlength='4000'
            data-editor
          ></textarea>
          <div class='editor-counter'>
            <span data-counter>0</span>
            / 4000
          </div>
          <div class='editor-toolbar' data-toolbar>
            <button data-format='clear'>Убрать форматирование</button>
            <button data-format='underline'>Подчеркнутый</button>
            <button data-format='strike'>Зачеркнутый</button>
            <button data-format='italic'>Курсив</button>
            <button data-format='bold'>Жирный</button>
            <button data-format='link'>Ссылка</button>
          </div>
        </div>

        <div class='link-preview-container' data-link-preview style='display: none;'>
          <div class='link-preview-content'>
            <div class='link-preview-content-wrapper'>
              <h4 class='link-preview-title'>Предпросмотр ссылки</h4>
              <p class='link-preview-url'>https://www.youtube.com/</p>
            </div>
            <label class='switch'>
              <input type='checkbox' data-link-preview-switch checked />
              <span class='slider'></span>
            </label>
          </div>
        </div>

        <div class='photo-position-container' data-photo-position style='display: none;'>
          <div class='photo-position-header'>
            <h4>Выберите расположение фото</h4>
            <button class='photo-position-close'>×</button>
          </div>
          <div class='photo-position-buttons'>
            <button class='photo-position-button' data-position='left'>
              <div class='photo-position-content-top'>
                <img src='/icons/imagepos.svg' alt='top' />
              </div>
              <div class='photo-position-content-top-text-wrapper'>
                <div class='photo-position-content-top-text-1'>
                </div>
                <div class='photo-position-content-top-text-2'>
                </div>
              </div>
            </button>
            <button class='photo-position-button' data-position='right'>
              <div class='photo-position-content-top-text-wrapper'>
                <div class='photo-position-content-top-text-1'>
                </div>
                <div class='photo-position-content-top-text-2'>
                </div>
              </div>
              <div class='photo-position-content-bottom'>
                <img src='/icons/imagepos.svg' alt='bottom' />
              </div>
            </button>
          </div>
        </div>

        <div class='new-post-attachments-container' data-attachments-list>
          <!-- Элементы будут добавляться динамически -->
        </div>
      </div>

      <button class='new-post-upload'>
        <div class='new-post-upload__icon'>
          <img src='/icons/image.svg' alt='Upload' />
        </div>
        <div class='new-post-upload__text'>
          <span>Прикрепить фото/видео</span>
          <span class='new-post-upload__text-or'>Размер не более 20Мб · PNG, JPEG, MP4</span>
        </div>
        <input
          type='file'
          accept='.png,.jpg,.jpeg,.mp4'
          class='new-post-upload__input'
          data-file-input
          multiple
        />
      </button>

      <div class='new-post-attachments' data-attachments-container>
        <div class='photo-tags'></div>
      </div>

      <div class='new-post-buttons'>
        <button class='new-post-button new-post-button--link' data-button-trigger>
          <span>Кнопка <br /> со ссылкой</span>
          <img src='/icons/purpleplus.svg' alt='Link' />
        </button>
        <button class='new-post-button new-post-button--hidden' data-hidden-trigger>
          <span>Скрытое приложение</span>
          <img src='/icons/purpleplus.svg' alt='Link' />
        </button>
      </div>
    </div>
  </div>

  <a href='/preview' class='preview-button'>
    Предпросмотр
  </a>
</section>

<!-- Модальное окно для кнопки со ссылкой -->
<div class='modal' data-modal='button' style='display: none;'>
  <div class='modal-content'>
    <div class='modal__header'>
      <div class='modal__header-wrapper'>
        <h2 class='modal__title'>Добавить кнопку</h2>
        <svg
          width='80'
          height='48'
          viewBox='0 0 80 48'
          fill='none'
          xmlns='http://www.w3.org/2000/svg'
        >
          <path
            d='M39.403 21C33.6716 13.8 25.0746 0 10.7463 0H0V48H80C63.975 48 50.02 34.3377 39.403 21Z'
            fill='var(--background-tertiary)'
          />
        </svg>

      </div>
      <button class='modal__close'>
        <img src='/icons/closemodal.svg' alt='Закрыть' />
      </button>
    </div>
    <div class='modal-body'>
      <input type='text' class='modal-input' placeholder='Текст' data-button-text />
      <input type='text' class='modal-input' placeholder='Ссылка' data-button-link />
      <div class='modal-buttons'>
        <button class='modal-button modal-button--cancel'>Отмена</button>
        <button class='modal-button modal-button--add'>Добавить</button>
      </div>
    </div>
  </div>
</div>

<!-- Модальное окно для скрытого продолжения -->
<div class='modal' data-modal='hidden' style='display: none;'>
  <div class='modal-content'>
    <div class='modal__header'>
      <div class='modal__header-wrapper'>
        <h2 class='modal__title-hidden'>Добавить <br /> скрытое продолжение</h2>
        <div style='height: 68px; width: 100%;'><svg
            width='80'
            height='68'
            viewBox='0 0 80 68'
            fill='none'
            xmlns='http://www.w3.org/2000/svg'
          >
            <path
              d='M39.403 29.75C33.6716 19.55 25.0746 0 10.7463 0H0V68H80C63.975 68 50.02 48.645 39.403 29.75Z'
              fill='var(--background-tertiary)'
            />
          </svg>
        </div>
      </div>
      <button class='modal__close-big modal__close'>
        <img src='/icons/closemodal.svg' alt='Закрыть' />
      </button>
    </div>
    <div class='modal-body-hidden'>
      <div class='modal-textarea-wrapper'>
        <span class='modal-textarea-wrapper-title'>Текст кнопки</span>
        <input class='modal-input' placeholder='Текст кнопки' />
      </div>
      <div class='modal-textarea-wrapper'>
        <span class='modal-textarea-wrapper-title'>Текст НЕ для подписчиков</span>
        <textarea class='modal-textarea' placeholder='Введите текст' maxlength='4000'></textarea>
        <div class='modal-textarea-counter'>
          <span data-hidden-counter='non-subscriber'>0</span>
          / 4000
        </div>
      </div>
      <div class='modal-textarea-wrapper'>
        <span class='modal-textarea-wrapper-title'>Текст для подписчиков</span>
        <textarea
          class='modal-textarea'
          placeholder='Текст для подписчиков'
          maxlength='4000'
        ></textarea>
        <div class='modal-textarea-counter'>
          <span data-hidden-counter>0</span>
          / 4000
        </div>
      </div>
      <div class='modal-buttons'>
        <button class='modal-button modal-button--cancel'>Отмена</button>
        <button class='modal-button modal-button--add'>Добавить</button>
      </div>
    </div>
  </div>
</div>

